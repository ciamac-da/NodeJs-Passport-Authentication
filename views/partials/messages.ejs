<% if(typeof errors != 'undefined'){ %>
<% errors.forEach(function(error){ %>
            <div class="alert-warning alert-dismissible fade show" role="alert"
            style="background-color: red; color: whitesmoke; text-align: center;
             padding: 0; justify-content: center; font-size: 18px; border-radius: 10px 10px 10px;
             margin-bottom: 5px; font-weight: bolder;" >
                  <%= error.msg%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            </button>
          </div>
<% }); %>
<% } %> 

